/* component/calendar/index.wxss */
.calendar-dialog{
  position: fixed;
  left:40rpx;
  top:120rpx;
  z-index:99999;
  background-color: #fff;
  padding-bottom: 30rpx;
  transition: all 2s;
  width: 670rpx;
  border-radius: 10rpx;
}
.top-handle {
    height: 80rpx;
}
.prev {
    text-align: right;
    height: 80rpx;
}
.next {
    height: 80rpx;
}
.prev-handle {
    width: 80rpx;
    height: 100%;
}
.next-handle {
    width: 80rpx;
    height: 100%;
}
.date-area {
    width: 50%;
    height: 80rpx;
    text-align: center;
    font-size: 32rpx;
    color: #333;
}
.weeks {
    height: 50rpx;
    line-height: 50rpx;
    border-bottom: 1rpx solid #dedede;
    padding-bottom: 20rpx;
}
.week {
    text-align: center;
}
.days {
    height: 500rpx;
    border-bottom: 1rpx solid #dedede;
    padding-left:5rpx;
}
.grid {
    width:110rpx;
}
.days_line{
    height: 660rpx !important;
    padding-top: 30rpx;
}
.day {
    width:60rpx;
    height: 60rpx;
    color: #000;
    font-size: 26rpx;
    font-weight: 500;
    text-align: center !important;
    padding-right: 0rpx;
}
.day_line{
    width:90rpx;
    height: 60rpx;
    padding-bottom: 30rpx;
    color: #000;
    font-size: 26rpx;
    font-weight: 500;
    text-align: center !important;
    padding-right: 0rpx;
    position: relative;
}
.day_line_active{
    width:90rpx;
    height:90rpx;
    line-height: 90rpx;
    /* padding-bottom: 30rpx; */
    color: #000;
    font-size: 26rpx;
    font-weight: 500;
    text-align: center !important;
    padding-right: 0rpx;
    position: relative;
}
.white_color{
  color: #fff !important;
}
.day_price{
  position: absolute;
  left: 0;
  bottom:20rpx;
  width: 82rpx;
  padding-right: 8rpx;
  text-align: center;
  font-size: 18rpx;
  color: #666;
}
.border-radius {
    border-radius: 50%;
    position: relative;
    left: 0;
    top: 0;
    color: #fff;
}
.blue-bg {
    background-color: #F8B62B;
    border:none !important;
    /* border:1rpx solid #F8B62B !important; */
}
.purple-bg {
    background-color: #b8b8f1;
}
.grey-bg {
    background-color: #d1d1d1;
    /* border:1rpx solid #d1d1d1; */
    border-radius: 50%;
    color: #fff;

}
.grey-color{
  color: #999;
  opacity: 0.5;
}
.grey-border{
  border:1rpx solid #666;
  border-radius: 50%;
  /* width:50rpx !important;
  height: 58rpx !important; */
}
.btn-list-wrap{
  width: 100%;
  text-align: center;
}
.btn-list{
  display: inline-block;
  height: 70rpx;
  margin-top: 30rpx;
}
.btn-item{
  width: 160rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #F8B62B;
  color: #fff;
  font-size: 30rpx;
  float: left;
  border-radius: 10rpx;
}
.cancelBtn{ margin-right: 40rpx;background-color: #fff;color: #333;border:1px solid #d1d1d1;height: 68rpx;width: 158rpx;}
.clearBtn{ margin-right: 40rpx;background-color: #d1d1d1;}

/* common */
.box {
  display: -webkit-box;
  display: box;
  display: -moz-box;
  /* 老版本 - 适配iOS 6-, Safari 3.1-6 */
  display: -webkit-flex;
  /* 新版本 - 适配Chrome */
  display: flex;
}

.box-lr {
    flex-direction: row;
}

.box-rl {
    flex-direction: row-reverse;
}

.box-tb {
    flex-direction: column;
}

.box-bt {
    flex-direction: column-reverse;
}

.box-pack-center {
  -webkit-box-justify-content:  center;
  -moz-align-justify-content:  center;
  -webkit-align-justify-content: center;
  justify-content:  center;
}

.box-pack-start {
  -webkit-box-justify-content:  flex-start;
  -moz-align-justify-content:  flex-start;
  -webkit-align-justify-content:  flex-start;
  justify-content:  flex-start;
}

.box-pack-end {
  -webkit-box-justify-content:  flex-end;
  -moz-align-justify-content:  flex-end;
  -webkit-align-justify-content:  flex-end;
  justify-content:  flex-end;
}

.box-pack-between {
  -webkit-box-justify-content: space-between;
  -moz-align-justify-content: space-between;
  -webkit-align-justify-content: space-between;
  justify-content: space-between;
}

.box-pack-around {
  -webkit-box-justify-content: space-around;
  -moz-align-justify-content: space-around;
  -webkit-align-justify-content: space-around;
  justify-content: space-around;
}

.box-align-center {
    -webkit-box-align: center;
  -moz-align-items: center;
  -webkit-align-items: center;
  align-items: center;
  text-align: center;
}

.box-align-start {
  -webkit-box-align: flex-start;
  -moz-align-items: flex-start;
  -webkit-align-items: flex-start;
  align-items: flex-start;
}

.box-align-end {
   -webkit-box-align: flex-end;
  -moz-align-items: flex-end;
  -webkit-align-items: flex-end;
  align-items: flex-end;
}

.self-align-center {
    align-self: center;
    margin: 0 auto;
}

.self-align-start {
    align-self: flex-start;
}

.self-align-end {
    align-self: flex-end;
}

.self-align-stretch {
    align-self: stretch;
}

.box-wrap {
    flex-wrap: wrap;
}

.box-nowrap {
    flex-wrap: nowrap;
}

.flex {
    flex-grow: 1;
}

.over-hidden{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.shrink {
    flex-shrink: 1;
}
.bg {
  background-image: linear-gradient(to bottom, #faefe7, #ffcbd7);
  overflow: hidden;
}
.brown-color {
  color: #784344;
}
.pink-color {
  color: #F8B62B;
}
.white-color {
  color: #fff;
}
.fs24 {
  font-size: 24rpx;
}
.fs28 {
  font-size: 28rpx;
}
.fs32 {
  font-size: 32rpx;
}
.fs36 {
