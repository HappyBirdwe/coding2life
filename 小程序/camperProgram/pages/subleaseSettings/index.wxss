/* pages/subleaseSettings/index.wxss */

.price-setting {
  padding: 56rpx 28rpx 40rpx;
}
.price-setting .price-input {
  display: flex;
  margin-bottom: 90rpx;
}
.price-setting .price-input view {
  color: #333;
  font-size: 30rpx;
  line-height: 30rpx;
}
.price-setting .price-input input {
  flex: 1;
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  margin-left: 60rpx;
  text-align: left;
}
.price-setting .price-save-btn {
  text-align: center;
}
.price-setting .price-save-btn view {
  display: inline-block;
  width: 296rpx;
  height: 70rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 70rpx;
  background-color: #F8B62B;
  border-radius: 4rpx;
}
.placeholder {
  width: 100%;
  height: 20rpx;
  background-color: #F7F8FE;
}

.visit-volume {
  padding-left: 30rpx;
  height: 120rpx;
}
.visit-volume view {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333;
}
.visit-volume .count {
  flex: 1;
  color: #F8B62B;
  margin-left: 40rpx;
  text-align: left;
}
.visit-volume .recharge {
  flex: 0 0 180rpx;
  position: relative;
  height: 100%;
  line-height: 120rpx;
}
.visit-volume .recharge .arrow {
  position: absolute;
  top: 50%;
  right: 36rpx;
  width: 16rpx;
  height: 16rpx;
  border-right:3rpx solid #999;
  border-top: 3rpx solid #999;
  transform:rotate(45deg) translateY(-50%);
-ms-transform:rotate(45deg) translateY(-50%); 	/* IE 9 */
-moz-transform:rotate(45deg) translateY(-50%); 	/* Firefox */
-webkit-transform:rotate(45deg) translateY(-50%); /* Safari 和 Chrome */
-o-transform:rotate(45deg) translateY(-50%); 
}

.qrcode-area {
  padding: 54rpx 30rpx 0;
}
.qrcode-area .title {
  color: #333;
  font-size: 30rpx;
  line-height: 30rpx;
  margin-bottom: 54rpx;
}
.qrcode-area .image-box {
  text-align: center;
  vertical-align: top;
  margin-bottom: 26rpx;
}
.qrcode-area .image-box image {
  width: 296rpx;
  height: 296rpx;
}
.qrcode-area .share {
  text-align: center;
  color: #F8B62B;
  font-size: 28rpx;
  line-height: 28rpx;
}
.qrcode-area .share image {
  width: 32rpx;
  height: 28rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.detail-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  color: white;
  text-align: center;
  font-size: 34rpx;
  line-height: 100rpx;
  background-color: #F8B62B;
}

