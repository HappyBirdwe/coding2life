.lease_dialog{
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 75rpx 30rpx;
  background-color: transparent;
  z-index:999;
  text-align: center;
}
.lease_list{
  width: 690rpx;
  border-radius: 22rpx;
  color: #02b5f9;
  background-color: #fff;
}
.lease_item,.cancel_btn{
  width: 690rpx;
  height: 90rpx; 
  font-size: 36rpx;
  line-height: 90rpx;
}
/* .lease_item:nth-child(1){
