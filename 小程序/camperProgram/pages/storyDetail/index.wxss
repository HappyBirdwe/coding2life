/* pages/storyDetail/index.wxss */
.container{
  padding-bottom:100rpx;
}
swiper{
  width: 100%;
  height: 642rpx;
}
swiper image{
  width:100%;
  height:100%;
}
.main{
  padding: 40rpx;
}
.title{
  color: #000;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 50rpx;
}
.content{
  margin-top: 30rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 48rpx;
  padding-left: 5rpx;
}
.bottom{
  border-bottom: 1rpx solid #dedede;
  padding-bottom: 30rpx;
}
.content image{
  max-width: 100% !important;
}
.location{
  margin-top: 60rpx;
  padding-left: 30rpx;
  width: 640rpx;
  position: relative;
  height: 23rpx;
  color: #666;
  font-size: 22rpx;
  line-height: 23rpx;
  padding-bottom: 50rpx;
  border-bottom: 1rpx solid #dedede;
}
.location image{
  position: absolute;
  left: 0;
  top:0;
  width: 18rpx;
  height: 23rpx;
}
.hit{
  padding: 70rpx 0;
  color: #F8B62B;
  font-size: 26rpx;
}
.comment_list{
  padding-top: 20rpx;
}
.comment_top{
  height: 60rpx;
  margin-bottom: 50rpx;
}
.comment_top view{
  height: 60rpx;
  line-height: 60rpx;
}
.no-comment {
  padding: 0 0 40rpx;
}
.top_title{
  float: left;
  color: #333;
  font-size: 36rpx;
}
.top_more{
  float: right;
  color: #999;
  font-size: 28rpx;
  position: relative;
  padding-right: 40rpx;
}
.top_more:after{
  content: '';
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  border-top: 1rpx solid #666;
  border-right: 1rpx solid #666;
  transform: rotate(45deg);
  -ms-transform:rotate(45deg); 	/* IE 9 */
  -moz-transform:rotate(45deg); 	/* Firefox */
  -webkit-transform:rotate(45deg); /* Safari å’Œ Chrome */
  -o-transform:rotate(45deg); 
  right:8rpx;
  top:20rpx;
}
.comment_list{
  padding-top: 20rpx;
}
.comment_item{
  margin-bottom: 50rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #dedede;
}
.last{
  border-bottom: none;
  margin-bottom: 0;
}
.reply{
  display: inline-block;
  margin: 0 10rpx;
  color: #999;
}
.user{
  position:relative;
  padding-left: 100rpx;
  height: 82rpx;
  font-size: 28rpx;
}
.avatar{
  position: absolute;
  left: 0;
  top:0;
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
}
.user_name{
  color: #333;
  margin-top: 5rpx;
}
.time{
  color: #666;
  margin-top: 5rpx;
}
.comment_text{
  font-size: 30rpx;
  color: #333;
  padding:20rpx 0;
}
.picture_list .picture_item{
  width: 126rpx;
  height: 126rpx;
  overflow: hidden;
  margin-right: 10rpx;
  display: inline-block;
}
.picture_list .picture_item:nth-child(5){
  margin-right: 0rpx;
}
.picture_item image{
  width: 100%;
  height: 100%;
}
.add_comment{
  height: 135rpx;
  line-height: 135rpx;
  color: #F8B62B;
  font-size: 38rpx;
  border-top: 1rpx solid #dedede;
}
.add_border{
  
  border-bottom: 1rpx solid #dedede;
}
.other_story{
  margin-top: 60rpx;
}
.other_title{
  color: #333;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 50rpx;
}
.list{
  margin-bottom: 50rpx;
}
.item{
  margin-top: 45rpx;
  margin-bottom: 10rpx;
  margin-right: 20rpx;
  width: 325rpx;
  height: 465rpx;
  display: inline-block;
}
.item:nth-child(2n){
  margin-right: 0;
}
.picture{
  position: relative;
  height: 325rpx;
  width: 325rpx;
  overflow: hidden;
}
.picture image{
  border-radius: 10rpx;
  height: 325rpx;
  width: 325rpx;
  display: block;
}
.tag{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  border-radius: 20rpx;
  border: 10rpx;
  padding: 0 24rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 20rpx;
  letter-spacing: 2rpx;
  color: #fff;
  z-index: 9;
}
.detail{
  height: 70rpx;
  padding:10rpx 0 0; 
  width: 325rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 28rpx;
}
.position{
  display: inline;
  color: #333;
  font-weight: 600;
}
.intro{
  display: inline;
  margin-left: 10rpx;
  color: #666;
}
.user_info{
  clear: both;
  position: relative;
  height:40rpx;
  margin-top: 10rpx;
  padding-left:70rpx;
}
.user_info .head{
  position: absolute;
  left: 0;
  top:3rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius:50%;
}
.num{
  display: inline-block;
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 40rpx;
  margin-right: 30rpx;
}
.num image{
  position: absolute;
  left: 0;
}
.thumb{
  top:10rpx;
  width: 28rpx;
  height: 24rpx;
}
.comment{
  top:8rpx;
  width: 26rpx;
  height: 26rpx;
}
.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #f8f8f8;
  height: 100rpx;
  line-height: 100rpx;
  z-index: 10;
}
.footer_item{
  width: 220rpx;
  padding-left: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #797979;
  float: left;
  position: relative;
}
.footer_item image{
  position: absolute;
  left:76rpx;
  top:33rpx;
  width: 34rpx;
  height: 34rpx;
}
.footer_write image{
  left:40rpx;
}

.comment_item:last-child{
  border-bottom: none;
  margin-bottom: 0;
} 