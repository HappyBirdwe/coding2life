/* pages/storyCircle/index.wxss */
.container{
  min-height: 100%;
  border-top:none;
  padding-bottom: 100rpx; 
}
.tab_list{
  height: 94rpx;
  text-align: center;
  border-bottom: 1rpx solid #dedede;
  font-size: 26rpx;
  color: #999;
  position: fixed;
  left: 0;
  top:0;
  width: 100%;
  z-index:999;
  background-color: #fff;
}
.tab_item{
  width: 20%;
  display: inline-block;
  height: 94rpx;
  line-height: 94rpx;
  position: relative;
}
.tab_item.active{
  color:#F8B62B;
}
.tab_item.active:after{
  content:'';
  width: 110rpx;
  height: 4rpx;
  background-color: #F8B62B;
  position: absolute;
  left: 20rpx;
  bottom:-2rpx;
}
.list{
  padding: 0 40rpx;
  margin-bottom: 50rpx;
  margin-top: 70rpx;
}
.item{
  margin-top: 45rpx;
  margin-bottom: 10rpx;
  margin-right: 20rpx;
  width: 325rpx;
  height: 465rpx;
  display: inline-block;
  position: relative;
}
.item:nth-child(2n){
  margin-right: 0;
}
.picture{
  position: relative;
  height: 325rpx;
  width: 325rpx;
  overflow: hidden;
}
.picture image{
  border-radius: 10rpx;
  height: 325rpx;
  width: 325rpx;
  display: block;
}
.tag{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  border-radius: 20rpx;
  border: 10rpx;
  padding: 0 24rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 20rpx;
  letter-spacing: 2rpx;
  color: #fff;
  z-index: 9;
}
.detail{
  height: 78rpx;
  padding:10rpx 0 0; 
  width: 325rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 28rpx;
}
.position{
  display: inline;
  color: #333;
  font-weight: 600;
}
.intro{
  display: inline;
  margin-left: 10rpx;
  color: #666;
}
.user{
  clear: both;
  position: relative;
  height:40rpx;
  margin-top: 10rpx;
  padding-left:70rpx;
}
.user .avatar{
  position: absolute;
  left: 0;
  top:3rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius:50%;
}
.num{
  display: inline-block;
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 40rpx;
  margin-right: 30rpx;
  font-size: 24rpx;
}
.num image{
  position: absolute;
  left: 0;
}
.thumb{
  top:10rpx;
  width: 28rpx;
  height: 24rpx;
}
.comment{
  top:8rpx;
  width: 26rpx;
  height: 26rpx;
}
.edit_btn{
  position: fixed;
  width:170rpx;
  left: 290rpx;
  bottom: 30rpx;
  box-shadow:4rpx 4rpx 10rpx #dedede;
  border-radius: 30rpx;
  color: #999;
  font-size: 28rpx;
  background-color: #fff;
  z-index: 999;
}
.edit{
  position:relative;
  padding-left: 65rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.edit image{
  position: absolute;
  width: 29rpx;
  height: 30rpx;
  left: 25rpx;
  top:20rpx;
}
.search_btn{
  position: fixed;
  top:120rpx;
  right: 40rpx;
  width: 78rpx;
  height: 78rpx;
  background-color: rgba(0, 0, 0, 0.6);
  text-align: center;
  line-height: 90rpx;
  border-radius: 50%;
  z-index: 999;
}
.search_btn image{
  display: inline-block;
  width: 37rpx;
  height: 36rpx;
}
.refresh{
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.travel_list{
  padding: 50rpx 40rpx 0;
}
.travel_item{
  width: 670rpx;
  height: 340rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  margin-top: 62rpx;
}
.travel_item image{
  width: 100%;
  height: 100%;
}
.item_tag{
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  height: 50rpx;
  max-width: 600rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 38rpx;
  color: #fff;
}

.form_btn{
  position: absolute;
  left: 0;
  top:0;
  width: 100%;
  height: 100%;
  z-index: 99;
}
.form_btn button{
  width: 100%;
  height: 100%;
  background-color: transparent;
  border:none;
}