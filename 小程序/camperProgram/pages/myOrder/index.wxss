/* pages/myOrder/index.wxss */
.container{
  min-height: 100%;
  background-color: #F2F2F2;
  padding-top: 95rpx;
  width: 100%;
}
.tab_list{
  height: 95rpx;
  position: fixed;
  left: 0;
  top:0;
  width: 100%;
  background-color: #fff;
  z-index: 9;
}
.tab_item{
  width: 25%;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  border-bottom: 1rpx solid #dedede;
  float: left;
  font-size: 30rpx;
  color: #999;
}
.tab_list .active{
  color: #F8B62B;
  position: relative;
}
.tab_list .active:after{
  position: absolute;
  content: '';
  width: 80rpx;
  height: 4rpx;
  background-color: #F8B62B;
  left:56rpx;
  bottom: -1rpx;
}
.order_list{
  margin-top: 20rpx;
  background-color: #F2F2F2;
  padding-bottom:10rpx;
}
.order_item{
  background-color: #fff;
  margin-bottom: 20rpx;
}
.item_top{
  height: 70rpx;
  border-bottom: 1rpx solid #dedede;
  padding: 0 40rpx;
  color: #616161;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item_top view{
  height: 70rpx;
  line-height: 70rpx;
}
.item_main{
  padding: 30rpx 40rpx 30rpx 305rpx;
  position: relative;
  height: 160rpx;
}
.item_main image{
  position: absolute;
  left: 40rpx;
  top:30rpx;
  width: 240rpx;
  height: 160rpx;
}
.item_main .name{
  max-width: 400rpx;
  min-height: 40rpx;
  max-height: 80rpx;
  word-break:break-all;
  display: -webkit-box;
  -webkit-line-clamp:2; 
  -webkit-box-orient:vertical;
  overflow:hidden;
  font-size: 28rpx;
  color: #000;
}
.item_main .date{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #666;
}
.item_detail{
  position: absolute;
  left: 305rpx;
  bottom:30rpx;
  margin-top: 10rpx;
  height: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item_detail .price{
  height: 30rpx;
  line-height: 30rpx;
  color: #363535;
  font-size: 28rpx;
  width: 200rpx;
  text-align: left;
}
.item_detail .num{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #666;
  width: 200rpx;
  text-align:right;
}
.item_bottom{
  padding: 14rpx 40rpx;
  text-align: right;
  border-top:1rpx solid #dedede;
}
.item_bottom .btn{
  display: inline-block;
  margin-left: 20rpx;
  padding: 0 35rpx;
  text-align: center;
  height: 54rpx;
  line-height: 54rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.gray_btn{
  color: #666;
  border:1rpx solid #B4B4B4;
}
.yellow_btn{
  color: #F8B62B;
  border:1rpx solid #F8B62B;
}