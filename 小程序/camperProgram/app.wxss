  text-align: center;
  color: #333;
  font-size: 38rpx;
  height: 140rpx;
  line-height: 140rpx;
}
.pay-amount text{
  font-size: 60rpx;
}
.way-list-title{
  font-size: 34rpx;
  margin: 0 0 20rpx;
  padding-left: 30rpx;
  color: #666;
}
.way-item{
