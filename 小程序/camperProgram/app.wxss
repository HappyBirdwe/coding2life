/* 确认支付  */
.pay-way{
  position: fixed;
  left: 0;
  bottom: 0;
  z-index:19;
  background-color: #fff;
  padding-bottom: 30rpx;
  transition: all 2s;
  width: 100%;
}
.pay-title{
