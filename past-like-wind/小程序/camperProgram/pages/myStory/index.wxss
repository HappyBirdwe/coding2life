/* pages/myStory/index.wxss */
.container{
  /* padding-top: 50rpx; */
}
.list{
  padding: 0 40rpx;
  margin-bottom: 50rpx;
}
.item{
  margin-top: 45rpx;
  margin-bottom: 10rpx;
  margin-right: 20rpx;
  width: 325rpx;
  height: 465rpx;
  display: inline-block;
}
.item:nth-child(2n){
  margin-right: 0;
}
.picture{
  position: relative;
  height: 325rpx;
  width: 325rpx;
  /* overflow: hidden; */
}
.picture image{
  border-radius: 10rpx;
  height: 325rpx;
  width: 325rpx;
  display: block;
}
.tag{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  border-radius: 20rpx;
  padding: 0 24rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 20rpx;
  letter-spacing: 2rpx;
  color: #fff;
  z-index: 9;
}
.delete{
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  border-radius:50%;
  width: 60rpx;
  height:60rpx;
  line-height:60rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9;
}
.delete image{
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  z-index:10;
}
.detail{
  height: 70rpx;
  padding:10rpx 0 0; 
  width: 325rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 28rpx;
}
.position{
  display: inline;
  color: #333;
  font-weight: 600;
}
.intro{
  display: inline;
  margin-left: 10rpx;
  color: #666;
}
.user{
  clear: both;
  position: relative;
  height:40rpx;
  margin-top: 10rpx;
  padding-left:70rpx;
}
.user .avatar{
  position: absolute;
  left: 0;
  top:3rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius:50%;
}
.num{
  display: inline-block;
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 40rpx;
  margin-right: 30rpx;
}
.num image{
  position: absolute;
  left: 0;
}
.thumb{
  top:10rpx;
  width: 28rpx;
  height: 24rpx;
}
.comment{
  top:8rpx;
  width: 26rpx;
  height: 26rpx;
}
