/* pages/storySort/index.wxss */
.container{
  padding-top: 50rpx;
}
.list_hot{
  margin-bottom: 76rpx;
}
.super_title{
  color: #222;
  font-size: 50rpx;
  padding-left:40rpx;
  font-weight: 600;
}
.tab_list{
  padding: 0 40rpx;
  height: 90rpx;
}
.tab_item{
  height: 90rpx;
  line-height: 90rpx;
  margin-right:30rpx;
  float: left;
  font-size: 34rpx;
  color: #000;
  text-align: center;
}
.tab_list .active{
  color: #f8b62b;
  border-bottom: 4rpx solid #f8b62b;
}
.list_wrap{
  width: 100%;
}
.index_wrap{
  position:relative;
}
.index_no_more{
  position: absolute;
  left: 0;
  top:0;
  width: 100%;
  height: 100%;
}
.pro_list{
  padding: 0 40rpx;
  margin-top: 30rpx;
}
.pro_list .pro_item:last-child{
  margin-right: 0;
}
.list_three{
  width: 760rpx;
  height: 244rpx;
}
.list_three .pro_item{
  width: 240rpx;
  height: 240rpx;
  float: left;
  margin-right:20rpx;
  box-shadow: 1px 1px 4px #dedede;
}
.list_three image{
  width: 240rpx;
  height: 140rpx;
  border-radius: 4rpx 4rpx 0 0;
  display: block;
}
.pro_item .type{
  height: 90rpx;
  padding-left: 20rpx;
  padding-top: 10rpx;
  border:1rpx solid #dedede;
  border-top:none;
  color: #000;
  font-size: 26rpx;
}


button{
  display: -webkit-box;
  display: box;
  display: -moz-box;
  /* 老版本 - 适配iOS 6-, Safari 3.1-6 */
  display: -webkit-flex;
  /* 新版本 - 适配Chrome */
  display: flex;
  -webkit-box-align: center;
  -moz-align-items: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-justify-content: center;
  -moz-align-justify-content: center;
  -webkit-align-justify-content: center;
  justify-content: center;
  width: 556rpx;
  height: 96rpx;
  background-color: #F7BA10;
  font-size: 42rpx;
  line-height: 96rpx;
  color: #fff;
  padding: 0rpx;
  margin: 860rpx auto 0;
}

.list{
  padding: 0 40rpx;
  margin-bottom: 50rpx;
}
.item{
  margin-top: 45rpx;
  margin-bottom: 10rpx;
  margin-right: 20rpx;
  width: 325rpx;
  height: 465rpx;
  display: inline-block;
}
.item:nth-child(2n){
  margin-right: 0;
}
.picture{
  position: relative;
  height: 325rpx;
  width: 325rpx;
  overflow: hidden;
}
.picture image{
  border-radius: 10rpx;
  height: 325rpx;
  width: 325rpx;
  display: block;
}
.tag{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  border-radius: 20rpx;
  border: 10rpx;
  padding: 0 24rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 20rpx;
  letter-spacing: 2rpx;
  color: #fff;
  z-index: 9;
}
.detail{
  height: 70rpx;
  padding:10rpx 0 0; 
  width: 325rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 28rpx;
}
.position{
  display: inline;
  color: #333;
  font-weight: 600;
}
.intro{
  display: inline;
  margin-left: 10rpx;
  color: #666;
}
.user{
  clear: both;
  position: relative;
  height:40rpx;
  margin-top: 10rpx;
  padding-left:70rpx;
}
.user .avatar{
  position: absolute;
  left: 0;
  top:3rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius:50%;
}
.num{
  display: inline-block;
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 40rpx;
  margin-right: 30rpx;
}
.num image{
  position: absolute;
  left: 0;
}
.thumb{
  top:10rpx;
  width: 28rpx;
  height: 24rpx;
}
.comment{
  top:8rpx;
  width: 26rpx;
  height: 26rpx;
}
