/* pages/myCenter/index.wxss */
.container{
  padding: 0  40rpx;
  height: 100%;
}
.top{
  padding: 50rpx 0;
  position: relative;
  height: 127rpx;
}
.top .name{
  color:#474747;
  font-size: 50rpx;
  font-weight: 600;
}
.top .edit_btn{
  color:#666;
  font-size:30rpx;
  margin-top: 0rpx;
}
.top .avatar{
  position: absolute;
  right: 0;
  top:50rpx;
  width: 127rpx;
  height: 127rpx;
  border-radius: 50%;
}
.item{
  height: 138rpx;
  width: 580rpx;
  padding:0 30rpx 0 60rpx;
  line-height: 138rpx;
  border-bottom: 1rpx solid #dedede;
  color: #474747;
  font-size: 40rpx;
  position: relative;
}
.list item:last-child{
  border-bottom: none;
}
.item .icon{
  position: absolute;
  left:6rpx;
  width:38rpx;
  height: 38rpx;
  top:50rpx;
}
.item:after{
  content:'';
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  border-top: 1rpx solid #666;
  border-right: 1rpx solid #666;
  transform: rotate(45deg);
  -ms-transform:rotate(45deg); 	/* IE 9 */
  -moz-transform:rotate(45deg); 	/* Firefox */
  -webkit-transform:rotate(45deg); /* Safari å’Œ Chrome */
  -o-transform:rotate(45deg); 
  right:12rpx;
  top: 60rpx;
}

.form_btn{
  position: absolute;
  left: 0;
  top:0;
  width: 100%;
  height: 100%;
  z-index: 99;
}
.form_btn button{
  width: 100%;
  height: 100%;
  background-color: transparent;
  border:none;
}