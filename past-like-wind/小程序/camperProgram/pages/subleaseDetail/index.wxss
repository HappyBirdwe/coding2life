/* pages/subleaseDetail/index.wxss */
page {
  background-color: #F7F8FE;
}
view {
  box-sizing: border-box;
}
.detail-list {
  padding: 40rpx 30rpx 0;
  margin-bottom: 40rpx;
}
.detail-list .detail-item {
  width: 100%;
  height: 286rpx;
  background-color: white;
  padding: 44rpx 48rpx 44rpx 60rpx;
  border-radius: 10rpx;
  position: relative;
}
.detail-list .detail-item + .detail-item {
  margin-top: 20rpx;
}
.detail-list .detail-item image {
  position: absolute;
  left: 20rpx;
  top: 0;
  width: 12rpx;
  height: 100%;
}
.detail-item .row + .row {
  margin-top: 28rpx;
}
.detail-item .row .title{
  flex: 0 0 160rpx;
  text-align: right;
  font-size: 30rpx;
  color: #999;
  line-height: 30rpx;
  margin-right: 4rpx;
}
.detail-item .row .content {
  flex: 1;
  color: #333;
  font-size: 30rpx;
  line-height: 30rpx;
}
.detail-item .row .content.price {
  color: #F8B62B; 
}