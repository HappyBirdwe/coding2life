 .loading{
  font-size: 26rpx;
  margin-bottom: 20rpx;
  text-align: center;
  color: #d1d1d1;
}
 .loading image{
  width:30rpx;
  height: 30rpx;
  vertical-align: middle;
  animation: rotation .8s linear infinite;
}
.no-list {
  z-index: 99999;
  color: #d1d1d1;
  font-size: 26rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
@-webkit-keyframes rotation{
from {-webkit-transform: rotate(0deg);}
to {-webkit-transform: rotate(360deg);}
}