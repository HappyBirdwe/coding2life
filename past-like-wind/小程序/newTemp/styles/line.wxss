.bLine {
    position: relative;
}
.bLine::after {
    position: absolute;
    content: "";
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    transform: scale(0.5);
    transform-origin: 0 0;
    border-bottom: 1rpx solid #E1E1E1;
}


