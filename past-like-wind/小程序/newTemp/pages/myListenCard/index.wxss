@import '../../styles/line.wxss';
.myListenCard-wrapper {
    width: 100%;
    height: 100%;
}
.show-head {
    box-sizing: border-box;
    background-color: #F2A678;
    width: 100%;
    height: 300rpx;
    padding: 84rpx 0 54rpx;
    color: #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
   
}
.head-title {
    margin: 0 auto;
    font-size: 26rpx;
}
.listen-time {
    margin: 0 auto;
    font-size: 46rpx;
}
.listen-desc {
    margin: 0 auto;
    font-size: 24rpx;
}
.center-bar {
    height: 20rpx;
    background-color: #F4F4F4;
    width: 100%;
}
.show-list {
    padding: 0 28rpx;
    background-color: #ffffff;
}
.list-item {
    height: 110rpx;
    box-sizing: border-box;
    color: #333333;
    padding: 20rpx 0;
    position: relative;
}
.list-item .item-desc{
    margin-bottom: 16rpx;
    font-size: 28rpx;
    line-height: 28rpx;
}
.list-item .item-time {
    font-size: 20rpx;
    color: #999999;
}
.list-item .item-score {
    position: absolute;
    right: 0;
    top: 40rpx;
    font-size: 26rpx;
}
.color-gold {
    color: #F2A678;
}